<launch>
  <group ns="intergrated_cam">
  	<node name="usb_cam1" pkg="usb_cam" type="usb_cam_node" >
      <param name="video_device" value="/dev/video0" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="usb_cam" />
      <param name="io_method" value="mmap"/>
      <param name="camera_info_url" value="file:///home/dev/.ros/camera_info/intergrated.yaml"/>
  	</node>
  </group>f

  <group ns="external_cam">
    <node name="usb_cam2" pkg="usb_cam" type="usb_cam_node" output="screen" respawn="true">
      <param name="video_device" value="/dev/video1" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="usb_cam" />
      <param name="io_method" value="mmap"/>
      <param name="camera_info_url" value="file:///home/dev/.ros/camera_info/external.yaml"/>
    </node>
  </group>

	<node
		name="image_proc"
		pkg="image_proc"
		type="image_proc"
		ns="external_cam/usb_cam2"
	/>

	<node pkg="apriltags_ros" type="apriltag_detector_node" name="apriltag_detector" >
    <!-- Remap topic required by the node to custom topics -->
    <remap from="image_rect" to="/external_cam/usb_cam2/image_rect_color" />
    <remap from="camera_info" to="/external_cam/usb_cam2/camera_info" />

    <!-- Optional: Subscribe to the compressed stream-->
    <param name="image_transport" type="str" value="compressed" />

    <!-- Select the tag family: 16h5, 25h7, 25h9, 36h9, or 36h11(default) -->
    <param name="tag_family" type="str" value="36h11" />

    <!-- Enable projected optical measurements for more accurate tag transformations -->
    <!-- This exists for backwards compatability and should be left true for new setups -->
    <param name="projected_optics" type="bool" value="true" />

    <!-- Describe the tags -->
    <rosparam param="tag_descriptions">[
      {id: 0, size: 0.518, frame_id: i_did_it},
      {id: 1, size: 0.163513, frame_id: a_frame},
      {id: 2, size: 0.163513, frame_id: tag_2},
      {id: 3, size: 0.163513},
      {id: 4, size: 0.163513},
      {id: 5, size: 0.163513}]
    </rosparam>
  	</node>

	<node
		name="image_view"
		pkg="image_view"
		type="image_view"
		respawn="false"
		output="screen"
	>
		<remap from="image" to="/tag_detections_image" />
		<param name="autosize" value="true" />
	</node>
</launch>